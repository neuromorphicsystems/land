{
    "private": true,
    "type": "module",
    "dependencies": {
        "chart.js": "4.5.0",
        "commander": "14.0.0",
        "esbuild": "0.25.9",
        "esbuild-svelte": "0.9.3",
        "gray-matter": "4.0.3",
        "js-beautify": "1.15.4",
        "markdown-it": "14.1.0",
        "mustache": "4.2.0",
        "svelte": "5.38.3"
    },
    "resolutions": {
        "caniuse-lite": "1.0.30001715"
    },
    "devDependencies": {
        "@types/mustache": "4.2.6",
        "prettier": "3.6.2",
        "prettier-plugin-svelte": "3.4.0"
    },
    "prettier": {
        "tabWidth": 4,
        "arrowParens": "avoid",
        "plugins": [
            "prettier-plugin-svelte"
        ],
        "overrides": [
            {
                "files": "*.svelte",
                "options": {
                    "parser": "svelte"
                }
            }
        ]
    },
    "scripts": {
        "build": "MODE=production node build.js",
        "build-standalone": "MODE=production node build-standalone.js",
        "lint": "npx prettier --write . --ignore-path ../.gitignore",
        "watch": "MODE=development node build.js --watch",
        "watch-production": "MODE=production node build.js --watch"
    }
}
